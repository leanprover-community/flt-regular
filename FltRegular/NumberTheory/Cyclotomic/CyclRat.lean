  have hi1 : 1 ‚â† i := by
    intro hi1
    rw [‚Üê hi1, pow_one] at hi
    exact hdiff hi
  obtain ‚ü®u, hu‚ü© :=
    CyclotomicUnit.IsPrimitiveRoot.zeta_pow_sub_eq_unit_zeta_sub_one R ph hp.out hp.out.one_lt H
      hi1 h
  refine' ‚ü®u, _‚ü©
  rw [‚Üê hu, hi, pow_one]

