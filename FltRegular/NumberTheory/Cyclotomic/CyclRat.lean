theorem nth_roots_prim [Fact (p : ‚Ñï).Prime] {Œ∑ : R} (hŒ∑ : Œ∑ ‚àà nthRootsFinset p R) (hne1 : Œ∑ ‚â† 1) :
    IsPrimitiveRoot Œ∑ p := by
